<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>


    <style name="AppTheme.Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Red" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/red</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.Button.Facebook" parent="Widget.AppCompat.Button.Colored">
        <item name="android:text">Continuar con Facebook</item>
        <item name="background">@drawable/ripple_facebook</item>
        <item name="android:background">@drawable/ripple_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Google" parent="Widget.AppCompat.Button.Colored">
        <item name="android:text">Continuar con Google</item>
        <item name="background">@drawable/ripple_google</item>
        <item name="android:background">@drawable/ripple_google</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.Normal" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/ripple_register_button</item>
        <item name="android:background">@drawable/ripple_register_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:text">Continuar con email</item>
        <item name="background">@drawable/ripple_email</item>
        <item name="android:background">@drawable/ripple_email</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>




</resources>
